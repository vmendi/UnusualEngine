<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Script><![CDATA[
		import mx.events.FlexEvent;
		
		[Bindable]
		public function get TeamName() : String { return mTeamName; }
		public function set TeamName(v : String) : void
		{ 
			mTeamName = v;
			
			if (mTeamName == null || mTeamName == "")
			{
				MyBitmap.visible = false;
			}
			else
			{
				MyBitmap.visible = true;
				(MyBitmap.content as MovieClip).gotoAndStop(mTeamName);
			}
		}
		
		[Bindable] private var mTeamName : String;			
		
	]]></fx:Script>
	
	<mx:Image visible="false" id="MyBitmap" 
			  source="@Embed(source='/Assets/General.swf', symbol='BadgesBig')" scaleContent="false" />

</s:Group>
