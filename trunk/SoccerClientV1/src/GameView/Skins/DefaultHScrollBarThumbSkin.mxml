<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata> 
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- background -->
	<s:Rect left="1" top="0" right="2" bottom="0" minWidth="14" minHeight="14" radiusX="7" radiusY="7">
		<s:stroke>
			<s:SolidColorStroke color="0x282828" weight="1"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="0xFFFFFF" />
		</s:fill>
	</s:Rect>
	
	<!-- fill -->
	<s:Rect left="2" top="1" right="3" bottom="1" radiusX="6" radiusY="6">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xA4A4A4"
								 color.over="0xC7C7C7"
								 color.down="0xBBBBBB" />
				<s:GradientEntry color="0x8D8D8D" 
								 color.over="0xB2B2B2"
								 color.down="0x8B8B8B" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

</s:SparkSkin>
