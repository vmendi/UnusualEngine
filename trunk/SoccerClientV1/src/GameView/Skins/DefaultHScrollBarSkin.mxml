    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="35" minHeight="15" 
    alpha.disabled="0.5" alpha.inactive="0.5">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.HScrollBar")]
    ]]>
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="inactive" />
    </s:states>
    
    <s:Button id="track" left="16" right="15" width="54" 
              focusEnabled="false"
              skinClass="GameView.Skins.DefaultHScrollBarTrackSkin" />

    <s:Button id="thumb" 
              focusEnabled="false" visible.inactive="false"
              skinClass="GameView.Skins.DefaultHScrollBarThumbSkin" />

    <s:Button id="decrementButton" left="0"
              focusEnabled="false" enabled.inactive="false"
              skinClass="GameView.Skins.DefaultScrollBarLeftButtonSkin" />
    
    <s:Button id="incrementButton" right="0"
              focusEnabled="false" enabled.inactive="false"
              skinClass="GameView.Skins.DefaultScrollBarRightButtonSkin" />

