<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		minWidth="100" minHeight="22"
		alpha.disabled="0.5"
		blendMode="normal">

	<fx:Metadata>
		[HostComponent("GameView.PromptingTextInput")]
	</fx:Metadata> 

	<!-- states -->
	<s:states>
		<s:State name="normal"/>
		<s:State name="prompting"/>
		<s:State name="disabled"/>
	</s:states>

	<!-- bg --> 
	<s:Rect id="border" left="0" right="0" top="0" bottom="0" radiusX="8" radiusY="8">
		<s:fill>
			<s:SolidColor id="bgFill" color="#ffffff" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke id="borderStroke" color="#333333" weight="1" />
		</s:stroke>
	</s:Rect>

	<!-- text -->
	<s:RichEditableText id="textDisplay" left="6" right="24" top="1" bottom="0"
			color="#333333"
			verticalAlign="middle" />

	<!-- prompt -->
	<s:Label id="promptDisplay" left="6" right="6" top="1" bottom="0" includeIn="prompting"
			color="#666666" fontStyle="italic"
			maxDisplayedLines="1"
			verticalAlign="middle" />
</s:SparkSkin>
