<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="CreationCompleteHandler(event)"
		 addedToStage="AddedToStageHandler(event)" preinitialize="PreinitializeHandler(event)">
	
	
	<fx:Script><![CDATA[
		import GameModel.RealtimeModel;
		
		import mx.core.FlexGlobals;
		import mx.events.FlexEvent;
		
		import utils.CentralLoader;
		import utils.UIComponentWrapper;

		protected function CreationCompleteHandler(event:FlexEvent):void
		{
		}
		
		protected function AddedToStageHandler(event:Event):void
		{	
			mCentralLoader = new CentralLoader(CentralLoader.BaseURL());
			mCentralLoader.Load("match.swf", true, OnMatchLoaded, FlexGlobals.topLevelApplication.loaderInfo.applicationDomain);
		}
		
		protected function PreinitializeHandler(event:FlexEvent):void
		{
			mRealtimeModel = SoccerClientV1.GetMainGameModel().TheRealtimeModel;
		}

		private function OnMatchLoaded(loader:Loader) : void
		{
			GameMetrics.ReportEvent(GameMetrics.PLAY_MATCH);
			
			mMatchSWF = new UIComponentWrapper(loader);
			this.addElement(mMatchSWF);
		
			mRealtimeModel.MatchEnded.addOnce(OnMatchEnded);
			mRealtimeModel.OnMatchLoaded(loader.content);
		}
		
		private function OnMatchEnded(matchResult:Object):void
		{
			this.removeElement(mMatchSWF);
		}
		
		private var mMatchSWF : UIComponentWrapper = null
		private var mRealtimeModel : RealtimeModel;
		private var mCentralLoader : CentralLoader;
		
	]]></fx:Script>
	

	
</s:Group>
